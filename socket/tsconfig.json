{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"allowJs": true,
		"checkJs": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "src",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"typeRoots": ["./src/types", "./node_modules/@types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
